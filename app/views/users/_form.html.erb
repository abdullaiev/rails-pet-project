<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert"
      <p><%= pluralize(user.errors.count, "validation error") %>:</p>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_area :bio, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-primary") %>

    <% if !@user.new_record? %>
      <%= link_to 'Cancel', @user, class: "btn btn-outline-dark" %>
    <% end %>
  </div>
<% end %>
