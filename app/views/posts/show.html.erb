<% if @post.user %>
  <p>
    <strong>Author:</strong>
    <%= @post.user.username %>
  </p>
<% end  %>

<% if @post.image.attached? %>
  <p>
    <strong>Image:</strong>
    <img src="<%= url_for(@post.image)%>" width="500px">
  </p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Likes:</strong>
  <%= @post.liked_by.count %>
</p>

<% if is_logged_in? %>
  <%= button_to @post.liked_by_user?(get_current_user) ? "Unlike" : "Like", like_post_path(@post) %>
<% end  %>

<% if is_logged_in? && @post.user == get_current_user %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end  %>

<%= link_to 'Back', posts_path %>
