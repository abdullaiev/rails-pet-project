<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p><%= pluralize(post.errors.count, "validation error") %>:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit(post.new_record? ? "Share" : "Save", class: "btn btn-primary") %>

    <% if !post.new_record? %>
      <%= link_to 'Cancel', post, class: "btn btn-outline-dark" %>
    <% end %>
  </div>
<% end %>
